<script>
    var globalobj = new Vue({
        el: '#selectDiv',
        data: {
            selected: '',
            repoList: [],
            log: 'No logs this is one long text. No logs this is one long text. No logs this is one long text. No logs this is one long text. No logs this is one long text. No logs this is one long text. No logs this is one long text. No logs this is one long text. No logs this is one long text. No logs this is one long text. No logs this is one long text. ',
        },
        methods: {
            getRepoList() {    
                vueObj = this;     
                axios.post('/getrepolist')
                .then(function(res) {
                    vueObj.repoList = res.data;
                    vueObj.selected = vueObj.repoList[0].name;
                })
                    .catch(function(err) {
                    window.alert(err);
                    });
            },
        },    
        watch: {
            log: function(newval, oldval) {
                window.alert(newval);
            }
        },
        created() {
            this.getRepoList();
        }
    })
</script>
